<%= semantic_form_for @product do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, min: 0.01 %>
  <%= f.input :published %>
  <%= f.input :category %>
  <%= f.input :country_of_origin, :label => "Select country of origin" %>
  <%= f.input :difficulty_level %>
  <%= f.action :submit %>    
<% end %>